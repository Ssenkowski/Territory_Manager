<% @publishers.each do |p| %>
  <strong>Id: </strong><%= p.id %><br>
  <strong>Name: </strong><%= p.first_name %> <%= p.last_name %><br>
  <strong>Congregation: </strong> <%= p.congregation.name %><br>
  <strong>Administrator: </strong>
    <% @user_id = p.user_id %>
    <% user = User.find_by_id(@user_id)%>
    <%= user.admin %>
  <br><br>
  <%= button_to 'Edit publisher', edit_publisher_path(p.id), :method => :get %><br>
  <%= link_to "View publisher's territories", publisher_path(p.id), class:"territories", id: "publisher-#{p.id}", data: {id: p.id} %><br><br>
<%end%>
