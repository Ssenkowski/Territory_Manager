<% @publisher = Publisher.find_by_id(current_user.publisher_id) %>

<% if @congregations.empty? %>
  <%= link_to 'Create a congregation first', new_congregation_path %>
<% elsif current_user.publisher_id == nil %>
  <%= render "add_publisher_id" %>
<% else %>
  <%= link_to 'Add an available Territory to your bag', "/congregations/#{@publisher.congregation_id}/territories" %><br><br>
    <% if current_user.admin? %>
      <%= link_to 'View all congregations', congregations_path, class: "congregations" %><br><br>
      <%= link_to 'Add a new congregation', new_congregation_path, class: "new" %><br><br>
    <% end %>
<% end %>
